{
  "name": "campaign-platform",
  "root": "campaign-platform",
  "$schema": "{workspaceRoot}/node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "campaign-platform/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "../dist/apps/campaign-platform",
        "configFile": "{projectRoot}/vite.config.mts",
        "tsConfig": "{projectRoot}/tsconfig.app.json"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "campaign-platform:build",
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "campaign-platform:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "campaign-platform:build:production",
          "hmr": false
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "campaign-platform:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
