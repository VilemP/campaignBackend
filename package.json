{
  "name": "campaign-management",
  "version": "0.1.0",
  "private": true,
  "description": "Campaign Management System",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') throw e }\"",
    "start": "nx serve campaign-backend",
    "build": "nx build campaign-backend",
    "test": "nx test campaign-backend",
    "test:watch": "nx test campaign-backend --watch",
    "test:coverage": "nx test campaign-backend --coverage",
    "test:pact": "nx run campaign-backend:test --testMatch='**/*.pact.spec.ts'",
    "test:ui": "nx run campaign-backend:test --ui",
    "lint": "nx lint",
    "format": "nx format:write",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "graph": "nx graph",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.1",
    "@opentelemetry/sdk-node": "^0.48.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "pino": "^8.17.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nx/eslint": "17.2.7",
    "@nx/js": "17.2.7",
    "@nx/node": "17.2.7",
    "@nx/workspace": "17.2.7",
    "@pact-foundation/pact": "^12.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "nx": "17.2.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "husky": "^8.0.0"
  }
}